<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <LangVersion>latest</LangVersion>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <IsPackable>true</IsPackable>
    <!-- packaging properties -->
    <PackageVersion>0.0.8</PackageVersion>
    <Title>BinlogRedactor sensitive data autodetection library</Title>
    <PackageId>DotUtils.MsBuild.BinlogRedactor.SensitiveDataDetector</PackageId>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/dotutils/MSBuild.BinlogRedactor</PackageProjectUrl>
    <PackageIcon>icon.jpeg</PackageIcon>
    <!-- SourceLink properties -->
    <PublishRepositoryUrl>true</PublishRepositoryUrl>
    <EmbedUntrackedSources>true</EmbedUntrackedSources>
    <IncludeSymbols>true</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
    <LangVersion>preview</LangVersion>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\..\docs\README.md" Pack="true" PackagePath="\"/>
    <None Include="..\..\icon.jpeg" Pack="true" PackagePath="\" />
  </ItemGroup>

  <ItemGroup>
    <InternalsVisibleTo Include="DotUtils.MsBuild.BinlogRedactor.Tests" PublicKey="" />
  </ItemGroup>
  
</Project>
