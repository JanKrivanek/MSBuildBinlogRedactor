<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <IsPackable>true</IsPackable>
    <!-- packaging properties -->
    <PackageVersion>0.0.2-alpha</PackageVersion>
    <Title>BinlogRedactor sensitive data autodetection library</Title>
    <PackageId>MSBuild.BinlogRedactor.SensitiveDataDetector</PackageId>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <!-- SourceLink properties -->
    <PublishRepositoryUrl>true</PublishRepositoryUrl>
    <EmbedUntrackedSources>true</EmbedUntrackedSources>
    <IncludeSymbols>true</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\..\docs\README.md" Pack="true" PackagePath="\"/>
  </ItemGroup>

  <ItemGroup>
    <InternalsVisibleTo Include="Microsoft.Build.BinlogRedactor.Tests" />
  </ItemGroup>
  
</Project>
